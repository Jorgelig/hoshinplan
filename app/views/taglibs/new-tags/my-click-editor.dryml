<def tag="my-click-editor">
	<div class="my-click-editor">
		<div class="in-place-edit" data-rapid='#{data_rapid("my-click-editor")}'>
			<view/>
			<span><t key="click_to_edit"/></span>
		</div>
		<input class="in-place-input hide"/>
		<a href="#" onclick="launchBoxSelect($(this).prevUntil('.in-place-edit')); return false;" class="btn btn-box in-place-btn hide">
			<span class="ic-box"/>
			<span><t key="insert_box_link"/></span>
		</a>
	</div>
</def>