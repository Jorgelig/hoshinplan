<def tag="cms" attrs="key, expires">
    <% expires ||= 100.year %>
    <% ActionController::Base.new.expire_fragment(request.host+'/cms/' + key) if params["clear_cache"] %>
    <% cache(request.host + '/cms/' + key, :expires_in => expires, :compress => true) do %>
    	<div id="cms"><%= raw ERB.new(cmsGet(key)).result(binding).force_encoding("UTF-8") %></div>
    <% end %>
</def>