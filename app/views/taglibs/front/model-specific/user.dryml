<def tag="name-one-user">
	<% 
	if !this.nil?
		value ||= this.name + " (" + this.email_address + ")" 
	else
		value ||= ""
	end
	%>
	<name-one completer="users" value="#{value}" complete-target="&Company.current_company" autocomplete='off' merge/>
</def>

<extend tag="form" for="User">
  <old-form merge multipart>
    <field-list: fields="name, email_address, image, companies"/>
  </old-form>
</extend>