<extend tag="show-page" for="User">
	<old-show-page merge>
		<prepend-content-header:>
			<a action="dashboard"  class="btn pull-right" if="&current_user == this"><t key="user.my_dashboard">My Dashboard</t></a>
		</prepend-content-header:>
	</old-show-page>
</extend>

<def tag="name-one-user">
	<% 
	if !this.nil?
		value ||= this.name + " (" + this.email_address + ")" 
	else
		value ||= ""
	end
	%>
	<name-one completer="users" value="#{value}" merge/>
</def>