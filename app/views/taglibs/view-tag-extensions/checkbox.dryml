<extend tag='input' for='boolean' attrs="checkbox-class">
    <%
        attributes['class'] ||= ''
    %>

    <div class="checkbox #{checkbox_class}">
        <label>
            <% attributes['class'].gsub!('form-control', '') %>
            <old-input merge />
            <do param="default" />
        </label>
    </div>
</extend>

<def tag="checkbox">
    <input for-type="boolean" merge />
</def>