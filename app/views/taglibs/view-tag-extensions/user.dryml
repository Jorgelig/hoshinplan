<def tag='view' for="User" attrs="abbrev" >
	<if test="&this.name.nil?">
	<a>#{this.email_address}</a>
	</if>
	<else>
	<a title="#{this.name}">
		<if test="&abbrev">
		<%= this.name.split.map{|x| x[0,1]}.join() %>
		</if>
		<else>
		#{this.name}
		</else>
	</a>
	</else>
</def>

<def tag="user-abbrev">
	<% 
		name = Company.current_company.user_abbrevs[this]
		abbr = name.split.map{|x| x[0,1]}.join() unless name.nil?
	%>
	<acronym title="#{name}">#{abbr}</acronym>
</def>
