<def tag='view' for="User" attrs="abbrev" >
	<if test="&this.name.nil?">
	<a>#{this.email_address}</a>
	</if>
	<else>
	<a title="#{this.name}">
		<if test="&abbrev">
		<user-abbrev/>
		</if>
		<else>
		<name/>
		</else>
	</a>
	</else>
</def>

<def tag="user-abbrev">
	<acronym title="#{this.name}"><view:abbrev/></acronym>
</def>
